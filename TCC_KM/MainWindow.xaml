<Window x:Name="frmPrincipal" x:Class="TCC_KM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC_KM"
        mc:Ignorable="d"
        Title="TCC" Height="468" Width="596" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnCaminho" Content="Abrir" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.493,0.45" Click="btnCaminho_Click"/>
        <TextBox x:Name="txtCaminho" Height="20" Margin="10,10,95,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" IsEnabled="False">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <CheckBox x:Name="chbTitulo" Content="Primeira linha são os títulos?" HorizontalAlignment="Left" Height="14" Margin="10,35,0,0" VerticalAlignment="Top" Width="174"/>
        <CheckBox x:Name="chbRegistro" Content="Primeira coluna identifica o registro?" HorizontalAlignment="Left" Height="14" Margin="208,35,0,0" VerticalAlignment="Top" Width="214"/>
        <Label Content="Delimitador de coluna :" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDelimitador" HorizontalAlignment="Left" Height="23" Margin="148,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="26" Text=";" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
        <DataGrid x:Name="dgBanco" Margin="10,90,10,207" IsReadOnly="True" Grid.IsSharedSizeScope="True" MinHeight="140" MinWidth="566" UseLayoutRounding="True"/>
        <DataGrid x:Name="dgBanco1" Margin="10,0,0,10" IsReadOnly="True" Grid.IsSharedSizeScope="True" UseLayoutRounding="True" VerticalAlignment="Bottom" Height="192" HorizontalAlignment="Left" Width="235"/>
        <Button x:Name="btnHopkins" Content="Hopkins" HorizontalAlignment="Right" Margin="0,34,9.6,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.493,0.45" Click="btnHopkins_Click" Height="19"/>
        <Label Content="Quantidade de casas decimais :" HorizontalAlignment="Left" Margin="208,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCasasDecimais" HorizontalAlignment="Left" Height="23" Margin="388,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="26" Text="7" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
        <Button x:Name="btnKMedia" Content="K-media" HorizontalAlignment="Right" Margin="0,58,9.6,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.493,0.45" Click="btnKMedia_Click"/>
        <DataGrid x:Name="dgkmedia" Margin="0,0,9.6,10.4" IsReadOnly="True" Grid.IsSharedSizeScope="True" UseLayoutRounding="True" VerticalAlignment="Bottom" Height="192" HorizontalAlignment="Right" Width="330"/>

    </Grid>
</Window>
